---
import { Image } from 'astro:assets';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
import GoogleTag from '../components/GoogleTag.astro';

type Props = {
  title: string;
  description?: string;
  heroImage?: ImageMetadata;
};
const { title, description, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <GoogleTag />
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: 100%;
        margin: 0 auto;
        padding: 1em;
      }
      .hero-image {
        text-align: center;
        margin-bottom: 1.5em;
      }
      .hero-image img {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .title {
        text-align: center;
        margin-bottom: 1em;
      }
      .title h1 {
        margin: 0.2em 0;
      }
      .description {
        text-align: center;
        color: rgb(var(--gray-dark));
        margin-bottom: 2em;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        {heroImage && (
          <div class="hero-image">
            <Image width={1020} height={510} src={heroImage} alt="" />
          </div>
        )}

        <div class="title">
          <h1>{title}</h1>
        </div>

        {description && <p class="description">{description}</p>}

        <!-- Project-specific slot (markdown OR interactive component) -->
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>

